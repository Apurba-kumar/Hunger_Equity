<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#224C8C">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rel">

        <ImageView
            android:id="@+id/eg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/egg" />

        <ImageView
            android:id="@+id/initial_logo_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/food"
            android:translationY="120dp" />

        <ImageView
            android:id="@+id/initial_logo_2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/donation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Register As:"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:translationY="120dp" />

        <Button
            android:id="@+id/donor_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Donor"
            android:translationX="-50dp"
            android:translationY="-150dp" />
        <Button
            android:layout_centerHorizontal="true"
            android:translationX="50dp"
            android:translationY="-150dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/charity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charity"/>
    </RelativeLayout>




</LinearLayout>